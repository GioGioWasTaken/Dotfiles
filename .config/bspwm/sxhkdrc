#|||----- Applications -----|||#


# Open Terminal (alacritty)
super + Return
	alacritty

# Get anywhere, in a few clicks.
ctrl + space
	sh $HOME/.config/via/via

# Application menu
alt + space
 	rofi -show drun -show-icons

# Bookmarks menu
super + space
	sh $HOME/.config/bmks/bmks

# Recent browser history menu
super + h
	selection=$(python $SCRIPTS/firefox-recent.py | rofi -dmenu); [ -n "$selection" ] && $BROWSER "$selection"

# Wallpaper choose
super + g
	 wezterm -e $SCRIPTS/Wallpaper_select

# OCR
super + o
  sh $SCRIPTS/OCR.sh

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the next/previous window in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local.!hidden.window

#### Music ####
{super + p, XF86AudioPlay}
	playerctl play-pause

#### Clipboard ####
super + v
	rofi -modi "clipboard:greenclip print" -show clipboard -run-command '{cmd}' -show-emoji "ó°…Ž"

# Clear Clipboard
super + shift + v
	greenclip clear

#### Color Picker ####
super + shift + p
	xcolor -P 100 -s

super + equal
	rofi -modi calc -show calc -calc-command 'echo "{result}" | xclip -sel c'

super + minus
	python $SCRIPTS/hex_calc.py


#|||----- System Keybindings -----|||#

# Show keybindings help

super + q
	$SCRIPTS/KeybindingsHelp
#Nordvpn
super + z
	sh $SCRIPTS/nordvpn.sh

# jgmenu
~button3
  xqp 0 $(xdo id -N Bspwm -n root) && jgmenu --csv-file=~/.config/bspwm/scripts/menu.txt --config-file=~/.config/bspwm/jgmenurc

# upper terminal
super + u
	tdrop -a -w 70% -h 35% -y 0 -x 15%  --class scratch alacritty --class=scratch

# Power off, Reboot, Log out, Lockscreen, kill an app
ctrl + super + alt + {p,r,q,l,k}
	{systemctl poweroff, systemctl reboot,bspc quit,physlock -d,xkill}

# focus or send to the given desktop
super +{_,shift + }{1-9,0}
	bspc {desktop -f, node -d} '^{1-9,10}'

# Lobster is currently broken
# super + m
# 	lobster

# Change transparency on focused window
ctrl + alt + {plus,minus,t}
	picom-trans {-c -o +3,-c -o -1,-c -d}

# wallpaper selector
super + alt + w
	$SCRIPTS/WallSelect


#|||----- Screenshots -----|||#

# Screenshot Now
Print
	ScreenShoTer --now

# Screenshot Select
ctrl + Print
	ScreenShoTer --sel

# Screenshot in 10s
alt + Print
	ScreenShoTer --in10

# Screenshot active window
shift + Print
	ScreenShoTer --active


# Manage brightness -- Don't have keys for that on my desktop.
XF86MonBrightness{Up,Down}
    sh Brightness {up,down}

# Volume control
XF86Audio{RaiseVolume,LowerVolume,Mute}
	Volume{ --inc, --dec, --toggle}

# Music Control
XF86Audio{Next,Prev}
	playerctl {next,previous}

#|||----- Bspwm hotkeys -----|||#

# Reload BSPWM
super + alt + r
	bspc wm -r

# close and kill
super + {_,shift + }w
	bspc node -{c,k}
	
# Reload Keybindings
super + Escape
	pkill -x sxhkd; dunstify -u low -i ~/.config/bspwm/assets/reload.svg 'sxhkd' 'The configuration file has been reloaded successfully!'; sxhkd -c $HOME/.config/bspwm/sxhkdrc
	# SIGUSR1 should send a restart signal to sxhkd, but it doesn't work for me, so i am resorting to pkill and restart instead.

#####


# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
ctrl + alt {m,x,s,p}
	bspc node -g {marked,locked,sticky,private}

# Hide/Unhide Window
ctrl + alt + h
	BspHideNode

#####


# Circulate the leaves of the tree
super + c
	bspc node @/ --circulate {backward,forward}

# Switch workspace
super + ctrl + {Left,Right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus or send to the given desktop
super + ctrl + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'
	
# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# Send focused Node to workspace directionally
# Doesn't work
# super + shift + {h,l}
# 	bspc node -d {prev,next} --follow



#|||----- floating -----|||#
# expand a window
super + alt + {h,j,k,l}
	bspc node -z {left -40 0,bottom 0 40,top 0 -40,right 40 0}

# contract a window
super + alt + shift + {h,j,k,l}
	mspc node -z {right -40 0,top 0 40,bottom 0 -40,left 40 0}

# move a floating window
alt + shift {h,j,k,l}
	bspc node -v {-40 0,0 40,0 -40,40 0}

#|||----- Auto start-----|||#

#### Thunar ####
super + e
		thunar &
super + i
	exec $HOME/.vim-anywhere/bin/run

# Apps (browser, editor)
shift + alt + {b,o}
	OpenApps {--browser,--obsidian}

# Terminal apps ranger
shift + alt + r
	OpenApps {--ranger}
